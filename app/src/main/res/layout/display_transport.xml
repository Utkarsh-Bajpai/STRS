<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCDD2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Transport Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="6dp"
                app:srcCompat="@drawable/strslogo"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="Source:" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                app:srcCompat="@drawable/source"
                android:layout_below="@+id/textView9"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="65dp"
                app:srcCompat="@drawable/destination"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toEndOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="Destination:" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/time"
                android:layout_below="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_alignTop="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:text="Duration:" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignStart="@+id/imageView4"
                app:srcCompat="@drawable/cost" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignStart="@+id/textView11"
                android:text="Price:" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/date"
                android:layout_below="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignTop="@+id/imageView7"
                android:layout_marginTop="8dp"
                android:text="Date:" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/imageView6"
                android:layout_alignTop="@+id/imageView7"
                app:srcCompat="@drawable/dtime" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView13"
                android:layout_alignTop="@+id/textView14"
                android:text="Time:" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/seat"
                android:layout_alignTop="@+id/imageView10"
                android:layout_alignStart="@+id/imageView7"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats"
                android:layout_alignTop="@+id/textView18"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="6dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/company"
                android:layout_below="@+id/imageView8"
                android:layout_alignStart="@+id/imageView8"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView15"
                android:layout_alignTop="@+id/imageView10"
                android:layout_marginTop="6dp"
                android:text="Company:" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>