<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company_Tab_Layout.PostTransport"
    android:layout_marginTop="40dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Transport Registration"
                android:textAllCaps="true"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:hint="Transport Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etTSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etTName"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Transport Source"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etTDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etTSource"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Transport Destination"/>

            <EditText
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etTDestination"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="time"
                android:hint="Journey Duration" />

            <EditText
                android:id="@+id/Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Time"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Ticket Cost"
                android:inputType="number"/>

            <TextView
                android:id="@+id/DDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Cost"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#111111"
                android:ems="10"
                android:text="Departure Date"
                android:layout_alignParentEnd="true" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:endYear="2100"
                android:startYear="2018"
                android:id = "@+id/datepicker"
                android:layout_below="@+id/DDate"
                android:layout_centerInParent="true">
            </DatePicker>

            <TextView
                android:id="@+id/DTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/datepicker"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="time"
                android:layout_marginBottom="5dp"
                android:text="Departure Time"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#111111"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/Seats"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/activity_main_timepicker"
                android:layout_marginTop="30dp"
                android:hint="Number of seats available"
                android:inputType="number"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bTRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Seats"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#EF5350"
                android:text="Register"
                android:layout_marginBottom="5dp"/>

            <TimePicker
                android:id="@+id/activity_main_timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DTime"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="16dip"
                android:paddingBottom="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
