<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.strs.MainActivity"
    android:background="#FFF59D">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.android.strs.TypeWriter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Smart Transport Reservation System"/>

            <ImageView
                android:id="@+id/photo_image_company"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/company"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="   Company Login   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bCompanyLogin"
                android:background="#EF5350"
                android:layout_below="@+id/photo_image_company"
                android:layout_alignLeft="@+id/bCustomerLogin"
                android:layout_alignStart="@+id/bCustomerLogin"
                android:layout_marginTop="13dp" />

            <ImageView
                android:id="@+id/photo_image_user"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:layout_marginTop="15dp"
                android:typeface="serif"
                android:layout_below="@+id/bCompanyLogin"
                android:layout_alignLeft="@+id/photo_image_company"
                android:layout_alignStart="@+id/photo_image_company" />

            <Button
                android:text="  Customer Login  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/bCustomerLogin"
                android:background="#42A5F5"
                android:layout_below="@+id/photo_image_user"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
